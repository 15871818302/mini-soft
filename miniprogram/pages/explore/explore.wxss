.container {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 0 0.1rem;
}

.top-view {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 3rem;
  background-color: rgb(255, 255, 255);
  z-index: 999999;
}

.top-title {
  margin-left: 1rem;
  font-weight: 700;
  font-size: 24px;
  line-height: 3rem;
}

.banner {
  width: 100%;
  background-color: rgb(73, 70, 70);
  height: 12rem;
  margin-top: 4rem;
}

.explore-list {
  width: 100%;
}

.explore-item {
  position: relative;
  width: 100%;
  height: 4rem;
  border-bottom: 1px solid #999999;
  line-height: 2rem;
}

.explore-image {
  width: 2rem;
  height: 2rem;
  margin-top: 1rem;
  margin-left: 1rem;
}

.explore-title {
  margin-left: 2rem;
  line-height: 2rem;
}

.explore-info {
  float: right;
  margin-right: 2rem;
  margin-top: 1rem;
  color: #999999;
}

.explore-arrow {
  position: absolute;
  right: 0.8rem;
  top: 1rem;
  color: #999999;
}