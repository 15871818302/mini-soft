.msg-container {
  width: 100%;
  height: 100%;
  position: relative;
  padding: 0 0.1rem;
}

.top-view {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 3rem;
  background-color: rgb(255, 255, 255);
  z-index: 999999;
}

.top-title {
  margin-left: 1rem;
  font-weight: 700;
  font-size: 24px;
  line-height: 3rem;
}

.msg-list {
  margin-top: 3rem;
  border-top: 1px solid black;
}

.msg-item {
  position: relative;
  height: 4rem;
  border-bottom: 1px solid black;
}

.msg-avatar {
  width: 3rem;
  height: 3rem;
  background-color: #999999;
  border-radius: 50%;
  margin-top: 1rem;
}

.msg-title {
  position: absolute;
  left: 4rem;
  top: 0rem;
  font-size: 20px;
}

.msg-info {
  position: absolute;
  left: 4rem;
  top: 2rem;
}

.msg-user {
  color: rgb(158, 201, 241);
}
