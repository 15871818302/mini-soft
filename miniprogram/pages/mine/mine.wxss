.user-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner {
  width: 100%;
  height: 15rem;
  background-color: #999999;
}

.user-avatar {
  position: absolute;
  left: 1rem;
  top: 12rem;
  width: 6rem;
  height: 6rem;
  background-color: #666666;
  border-radius: 50%;
}

.user-name {
  position: absolute;
  left: 8rem;
  top: 16rem;
  font-weight: 700;
  font-size: 24px;
}

.user-edit {
  position: absolute;
  right: 1rem;
  top: 16rem;
  width: 4rem;
  height: 2rem;
  border: 1px solid black;
  border-radius: 0.5rem;
  text-align: center;
  line-height: 2rem;
}

.user-article-info {
  display: flex;
  width: 100%;
  height: 5rem;
  margin-top: 5rem;
  border-bottom: 1px solid black;
}

.text-info {
  display: flex;
  flex: 1;
  flex-direction: column;
  text-align: center;
}

.t-title {
  color: #999999;
}

.t-value {
  font-size: 24px;
  font-weight: 700;
}

.user-item {
  position: relative;
  width: 100%;
  height: 4rem;
  border-bottom: 1px solid rgb(211, 207, 207);
}

.info-img {
  width: 3rem;
  height: 3rem;
  background-color: #999;
  margin-top: 1rem;
  border-radius: 50%;
  margin-left: 1rem;
}

.info-msg {
  position: absolute;
  top: 1rem;
  left: 5rem;
  color: #666666;
}