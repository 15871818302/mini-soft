.article-container {
  padding: 0 1rem;
}

.top-user {
  width: 100%;
  height: 4rem;
  display: flex;
  padding-top: 1rem;
}

.avatar {
  width: 3rem;
  height: 3rem;
  background-color: #999999;
  border-radius: 50%;
}

.user-info {
  margin-left: 1rem;
}

.article-title {
  font-size: 26px;
  font-weight: 700;
  margin-bottom: 1.5rem;
}

.article-inner {
  min-height: 4rem;
}

.like-button {
  text-align: center;
  width: 100%;
  height: 2rem;
  margin-top: 1rem;
  text-align: center;
}

.tab-image {
  width: 1rem;
  height: 1rem;
  margin-left: 1rem;
}